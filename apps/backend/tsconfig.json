{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@repo/db": ["../../packages/db/dist"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../../packages/db" }
  ]
}
